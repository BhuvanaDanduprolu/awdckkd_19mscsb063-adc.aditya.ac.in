import java.util.*;
class Main 
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a number");
        int n=sc.nextInt();
        int i,sum=0;
        for(i=2;i<n;i++)
        {
         if(n%i==0)
         {
          sum=sum+i;
         }
        }
        System.out.println("Sum="+sum);
    }
}
-------------------------------------------------------
output:
Enter a number
3
Sum=0
